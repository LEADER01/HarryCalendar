//Variablos
$DeepRed = #F06B50
$DeepBlack = #4B3E4D
$DeepBlue = #1f8087

//First palette
$Blue = #45AAB8
$Sand = #E1D772
$Biege = #FAF4B1
$Black = #394240
$Red = #F06B50
/* Second palette */
Deep = #4B3E4D
Blue = #1E8C93
Biege = #DBD8A2
Yellow-ish = #C4AC30
Red-ish = #D74F33

#header
  width 100%
  padding 18px 0 28px
  background-color $Black
  h1
    color $Biege
    align-content center
    text-align center

table#backgroundTable
  position fixed
  width 100%
  height 100%
  td
    border: 0.5px rgba(57, 66, 64, 0.75) dashed
    &.red-day
      background-color $DeepRed
    &.black-day
      background-color $DeepBlack
    &.blue-day
      background-color $DeepBlue

div#mainContent
  position absolute
  z-index 999
  opacity 0.7
  width 600px
  background #7F007F
  transition .3s
  //height 100px
  &:hover
    opacity 1